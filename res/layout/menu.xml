<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menu_background">

	<LinearLayout
	    android:id="@+id/linearLayout2"
		android:orientation="vertical"
		android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_weight="2" 
        android:layout_marginTop="50dp" 
        android:layout_marginLeft="30dp">
			
			<Button android:id="@+id/startButton" 
				android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
				android:layout_weight="3"
				android:onClick="playGame" 
				android:background="@drawable/menu_button_play_game"
				android:layout_margin="5dp"/>
			
			<Button android:id="@+id/highscoreButton"
				android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
				android:layout_weight="3"
				android:background="@drawable/menu_button_highscore"
				android:onClick="showScore"
				android:layout_margin="5dp"/>	
				
			<Button android:id="@+id/scoreButton"
				android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:text="帮助"
				android:layout_weight="3"
				android:layout_margin="5dp"
				android:onClick="help"/>	

			 <View
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="2"
		    	android:scaleType="fitCenter"/>
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/linearLayout3"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:layout_marginTop="20dp"
	    android:layout_marginRight="20dp"
	    android:gravity="right"
	    android:orientation="horizontal" >
		
	    <ImageView 
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:background="#00000000"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/game_obstacle_coin"/>
	    <TextView 
	        android:id="@+id/score_total"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFD700"
	        android:textSize="30sp"
	        android:text="100"
	        android:padding="10dp" />
	</LinearLayout>
	
</LinearLayout>
